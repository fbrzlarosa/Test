<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:orientation="vertical">

<FrameLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingBottom="5dp">


    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_card_progressbar"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.fabriziolarosa.testicemobile.Common.ImageViewFromUrl
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/movie_card_poster"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="#ddd"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#88000000"
                android:layout_gravity="bottom"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp">
                <TextView
                    android:id="@+id/movie_card_director"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet"
                    android:gravity="left"
                    android:textSize="16dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#ffffff"
                    android:layout_weight="0.7"/>
                <TextView
                    android:id="@+id/movie_card_year"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="2016"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:layout_weight="0.3"
                    android:gravity="right"/>

            </LinearLayout>

        </FrameLayout>
        <TextView
            android:id="@+id/movie_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet"
            android:gravity="left"
            android:textSize="20dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#000000"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
    </LinearLayout>
</FrameLayout>
    <View android:layout_height="1dp"
          android:layout_width="match_parent"
          android:background="#88000000"/>
</LinearLayout>
